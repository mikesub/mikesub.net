{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["docs/blog/**/*"]
	},
	"formatter": {
		"lineWidth": 100
	},
	"linter": {
		"rules": {
			"a11y": {
				"useKeyWithClickEvents": "warn",
				"noAutofocus": "warn",
				"useButtonType": "warn"
			},
			"style": {
				"noUnusedTemplateLiteral": "warn",
				"useConst": "warn",
				"useTemplate": "warn",
				"useImportType": "warn",
				"noNonNullAssertion": "warn"
			},
			"suspicious": {
				"noGlobalIsNan": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"noUselessTernary": "warn"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	}
}
